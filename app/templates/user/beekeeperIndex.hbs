<div class="user-image beekeeper" {{#if user.image}}style="background-image: url({{user.image}})" {{/if}}></div>
<div class='user-profile'>
	<h1 class="business-name">{{user.businessName}}</h1>
	<h2 class="crops">{{user.crops}}</h2>
	<div class="user-description">{{user.description}}</div>
</div>
	<div>
		<h3>Number of hives available: {{user.hivesAvailable}}</h3>
		<h4>Distance from you: {{distance}} miles</h4>
		<ul class="cost-details">
			<li>Cost per hive ${{user.costPerHive}}</li>
			<li>Transportation fee: ${{user.costPerMile}} per mile <span>if distance is over {{user.maxDistFree}} miles</span></li>
		</ul>

		<div class="new-request"></div>
	</div>

	<div class="newMessage-container">
		<a href="#" class="button newMessage">Send a Message</a>
	</div>

	<div class='reviews-container'>
		<div class="reviews-list-container">
			<div class="reviews">
				<h2>Reviews</h2>
			</div>
		</div>
	</div>