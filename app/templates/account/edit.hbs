<input type="text" name="range" value="{{user.geoRangeRadius}}" placeholder="Range in miles">
{{else}}
<input type="text" name="crop" value="{{user.crop}}" placeholder="Crop">
<input type="text" name="farmAcerage" value="{{user.farmAcerage}}" placeholder="Farm acerage">
{{/if}}

