<p>account type: {{user.userType}}</p>

<input type="text" name="firstName" value="{{user.firstName}}" placeholder="First Name">
<input type="text" name="lastName" value="{{user.lastName}}" placeholder="Last Name">

<input type="text" name="address" value="{{user.address}}" placeholder="Street Address">
<input type="text" name="city" value="{{user.city}}" placeholder="City">
<input type="text" name="state" value="{{user.state}}" placeholder="State">
<input type="text" name="zipCode" value="{{user.zipCode}}" placeholder="Zip Code">

