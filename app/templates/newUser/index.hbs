<div class='form-block'>
	<label>Username</label>
	<input type="text" name="username" value="" placeholder="" required>
</div>
<div class='form-block email'>
	<label>Email Address</label>
	<input id="email" type="email" name="email" value="{{user.email}}" placeholder="youremail@domain.com" required >
	<label>Confirm Email Address</label>
	<input type="email" name="email" value="{{user.email}}" placeholder="youremail@domain.com" data-parsley-equalto="#email" required>
</div>
<div class='form-block password'>
	<label>Choose Account Type</label>
	<select name='userType' class='userType' required>
		<option value="">Account Type</option>
		<option value="beekeeper">Beekeeper</option>
		<option value="farmer">Farmer</option>
	</select>
</div>
<div class='form-block password'>
	<label>Password</label>
	<input id="pass" type="password" value="{{user.password}}" name="password" type="password" placeholder="" required data-parsley-minlength="3">
	<label>Confirm Password</label>
	<input type="password" value="{{user.password}}" name="password" placeholder="" data-parsley-equalto="#pass" required data-parsley-minlength="3">
</div>
<div class='form-block'>
	<label>Name of Business</label>
	<input type="text" value="{{user.businessName}}" name="businessName" placeholder="" required>
	<div class="name">
		<label>First name</label>
		<input type="text" value="{{user.firstName}}" name="firstName" placeholder="" required>
		<label>Last Name</label>
		<input type="text" value="{{user.lastName}}" name="lastName" placeholder="" required>
	</div>
</div>
