<div class='request-solo'>
	<h1 class="main-title">Request</h1>

		<ul class="sub-details-beekeeper">
			<li class="hive-cost total-cost">
				<span class="figure">${{totalCost}}</span>
				<span class="detail-title">Total cost</span>
			</li>
			<li>
				<span class="figure">{{numHives}}</span>
				<span class="detail-title">Number of hives requested</span>
			</li>
			<li>
				<span class="figure">{{milesOver}}</span>
				<span class="detail-title">Miles over</span>
			</li>
			<li>
				<span class="figure">${{mileageCost}}</span>
				<span class="detail-title">Milage Cost</span>
			</li>

		</ul>

	<ul class="request-details">
		<li>Request ID: {{objectId}}</li>
{{!-- 		<li>{{farmer.objectId}}</li>
		<li>{{beekeeper.objectId}}</li>
 --}}
		<li>Total Cost: ${{totalCost}}</li>
		<li><input type="number" name="numHives" value="{{numHives}}"></li>	
		<li><input name="startDate" type="date" value="{{startDate}}"> - <input type="date" name="endDate" value="{{endDate}}"></li>
		<li><textarea name="message">{{message}}</textarea></li>
	</ul>
	<div class="request-buttons">
		<button class="edit-request">Update Request</button>
		<button class="cancel-edit cancel">Cancel</button>
	</div>
</div>


