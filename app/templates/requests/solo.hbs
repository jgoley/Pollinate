<div class='request-solo'>
	<h1 class="main-title">Request</h1>

		<ul class="sub-details-beekeeper">
			<li class="hive-cost total-cost">
				<span class="figure">${{request.totalCost}}</span>
				<span class="detail-title">Total cost</span>
			</li>
			<li>
				<span class="figure">{{request.numHives}}</span>
				<span class="detail-title">hives requested</span>
			</li>
			<li>
				<span class="figure">{{request.milesOver}}</span>
				<span class="detail-title">miles over</span>
			</li>
			<li>
				<span class="figure">${{request.mileageCost}}</span>
				<span class="detail-title">milage Cost</span>
			</li>

		</ul>
	<ul class="request-details">

		<h2>
		{{#if_eq curUser.userType 'beekeeper'}}		
			Farmer:
		{{else}}
			Beekeeper:
		{{/if_eq}}
		{{otherUser.username}}
		</h2>

	</ul>
	<h2>Dates: <span>{{formattedDates.startDate}} - {{formattedDates.endDate}}</span></h2>
	
	<div class="request-message">
		<h2>Message:</h2>
		<p class="message">{{request.message}}</p>
	</div>

	<p class="subtle">Submitted: {{formattedDates.createdAt}}</p>

	<div class="request-buttons">
		{{#if request.accepted}}
		{{log archived}}
			{{#if archived}}
					<button class='archive'>Archive</button>
			{{/if}}
		{{else}}
				{{#if_eq curUser.userType 'beekeeper'}}
				<button class='accept'>Accept</button>
			{{/if_eq}}

		{{/if}}

		{{#unless archived}}
				<button class="edit-request">Edit request</button>
		{{/unless}}
	</div>
</div>