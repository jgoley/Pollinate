{{!-- Requests on Beekeeper pages --}}
<div class="details {{#if request.accepted}}accepted{{else}}notAccepted{{/if}} {{#if request.archivedBeekeeper}}archived {{/if}}">
	<a href="#/request/{{request.objectId}}">
		<span class='strong'>{{request.numHives}}</span> hives requested by {{user.businessName}}

		<ul class="sub-details-beekeeper hidden">
			<li>
				<span class="detail-title">Total cost</span>
				<span class="figure">${{request.totalCost}}</span>
			</li>
			<li>
				<span class="detail-title">hives requested</span>
				<span class="figure">{{request.numHives}}</span>
			</li>

			<li>
				<span class="detail-title">Start Date</span>
				<span class="figure">{{formattedDates.startDate}}</span>
			</li>
		</ul>
	</a>
	<div class="actions">
		
		{{#if request.accepted}}
			{{#unless request.archivedBeekeeper}}
				<button class='archive'>Archive</button>
			{{/unless}}
		{{else}}
			<button class='accept'>Accept</button>
		{{/if}}
		
		
		{{#unless request.archivedBeekeeper}}
			<button class='edit-request'>Edit Request</button>
		{{/unless}}
		<button class='more-info'>More Info</button>
	</div>
</div>